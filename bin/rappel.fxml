<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vue.CtrlRappel">
   <children>
      <Label text="Envoyer un rappel">
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Date du rappel :">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Label>
            <RadioButton fx:id="rbNov2" mnemonicParsing="false" text="02 novembre">
               <toggleGroup>
                  <ToggleGroup fx:id="dateBouton" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="rbNov20" mnemonicParsing="false" text="20 novembre" toggleGroup="$dateBouton" />
         </children>
      </HBox>
      <Label text="Élève :">
         <padding>
            <Insets left="20.0" />
         </padding>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="8.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label minWidth="60" text="Id :">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="idField" promptText="Entrer l'id" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label minWidth="60" text="Nom :">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="nomField" editable="false" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label minWidth="60" text="Prénom :">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="prenomField" editable="false" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="bnAnnuler" mnemonicParsing="false" onAction="#clicAnnuler" text="Annuler">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="bnVisualiser" mnemonicParsing="false" text="Visualiser mail">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
